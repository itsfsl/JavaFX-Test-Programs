         <children>
            <Button fx:id="playButton" alignment="CENTER" mnemonicParsing="false" onAction="#playSong" prefHeight="30.0" prefWidth="110.0" text="Play" textAlignment="CENTER">
               <font>
                  <Font name="Corbel" size="12.0" />
               </font>
            </Button>
            <Button fx:id="stopButton" alignment="CENTER" mnemonicParsing="false" onAction="#stopSong" prefHeight="30.0" prefWidth="110.0" text="Stop" textAlignment="CENTER">
