      <Button fx:id="colorMode" alignment="CENTER" layoutX="16.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#colorMode" prefHeight="5.0" prefWidth="15.0" textAlignment="CENTER">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
   </children>
