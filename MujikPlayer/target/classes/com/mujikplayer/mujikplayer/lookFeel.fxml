                  <Font name="Corbel" size="12.0" />
               </font>
            </Button>
            <Button fx:id="prevButton" alignment="CENTER" mnemonicParsing="false" onAction="#prevSong" prefHeight="30.0" prefWidth="110.0" text="Previous" textAlignment="CENTER">
